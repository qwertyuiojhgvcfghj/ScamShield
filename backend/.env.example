# ===========================================
# ScamShield - Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# Application Settings
# ===========================================
APP_NAME=ScamShield
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# ===========================================
# Server Settings
# ===========================================
HOST=0.0.0.0
PORT=8000
WORKERS=4

# ===========================================
# Security (Generate new keys for production!)
# ===========================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-super-secret-key-change-this
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# Database (MongoDB)
# ===========================================
# Local development
MONGODB_URL=mongodb://localhost:27017/scamshield
MONGODB_DB_NAME=scamshield

# For MongoDB Atlas (production):
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/scamshield?retryWrites=true&w=majority

# ===========================================
# Redis Cache (Optional)
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ===========================================
# AI Providers
# ===========================================
# Groq API - Get key at https://console.groq.com
GROQ_API_KEY=your-groq-api-key

# Google Gemini - Get key at https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key

# ===========================================
# OAuth Settings
# ===========================================
# Google OAuth - Configure at https://console.cloud.google.com
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-backend-url.onrender.com/api/v1/auth/google/callback

# GitHub OAuth - Configure at https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=https://your-backend-url.onrender.com/api/v1/auth/github/callback

# ===========================================
# Email Settings (Optional - for verification)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@scamshield.io

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ===========================================
# CORS Settings
# ===========================================
# Add your Vercel frontend URL
CORS_ORIGINS=http://localhost:3000,https://your-frontend.vercel.app,https://your-custom-domain.com
CORS_ALLOW_CREDENTIALS=true

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===========================================
# Monitoring (Optional)
# ===========================================
SENTRY_DSN=
